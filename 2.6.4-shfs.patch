+{
+	printk(KERN_NOTICE "SHell File System, (c) 2002-2004 Miroslav Spousta\n");
+	fcache_init();
+	inode_cache = kmem_cache_create("shfs_inode", sizeof(struct shfs_inode_info), 0, 0, NULL, NULL);
