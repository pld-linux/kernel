+shfs_follow_link(struct dentry *dentry, struct nameidata *nd)
+{
+	struct shfs_sb_info *info = info_from_dentry(dentry);
+	char name[SHFS_PATH_MAX];
+	char real_name[SHFS_PATH_MAX];
+	int result;
