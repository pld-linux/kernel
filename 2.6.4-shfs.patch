+/* aaa'aaa -> aaa'\''aaa */
+static int
+replace_quote(char *name)
+{
+	char *s;
+	char *r = name;
+	int q = 0;
+	
+	while (*r) {
+		if (*r == '\'')
+			q++;
+		r++;
+	}
+	s = r+(3*q);
+	if ((s-name+1) > SHFS_PATH_MAX)
+		return -1;
+	
+	*(s--) = '\0';
+	r--;
+	while (q) {
+		if (*r == '\'') {
+			s -= 3;
+			s[0] = '\'';
+			s[1] = '\\';
+			s[2] = '\'';
+			s[3] = '\'';
+			q--;
+		} else {
+			*s = *r;
+		}
+		s--;
+		r--;
+	}
+	return 0;
+}
+
+static int
+check_path(char *path)
+{
+	if (replace_quote(path) < 0)
+		return 0;
+	return 1;
+}
