+int cpu_visible_in_cpuset(int cpu, struct cpuset * cs)
+{
+	/* all cpus are visible in non-virtualized cpusets */
+	if (!is_virtualized(cs))
+		return 1;
+
+	return cpu_isset(cpu, cs->cpus_allowed);
