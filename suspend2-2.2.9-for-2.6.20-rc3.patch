+	down(&pm_sem);
+	__suspend_try_resume();
+
+	/* 
+	 * For initramfs, we have to clear the boot time
+	 * flag after trying to resume
+	 */
+	clear_suspend_state(SUSPEND_BOOT_TIME);
+
+	up(&pm_sem);
+
+	suspend_finish_anything(0);
+}
