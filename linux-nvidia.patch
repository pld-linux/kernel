+			netif_tx_unlock_bh(dev);
+#else
+			spin_unlock_bh(&dev->xmit_lock);
+#endif
+			printk(KERN_INFO "%s: link down.\n", dev->name);
+		}
+
+		bmcr = mii_rw(dev, np->phyaddr, MII_BMCR, MII_READ);
+		if (np->phy_model == PHY_MODEL_MARVELL_E3016) {
+			bmcr |= BMCR_ANENABLE;
