+static __inline__ struct proc_acl * avl_set(struct acl_temp *data, struct proc_acl *left, struct proc_acl *right,__u16 height) 
+{
+	struct proc_acl *dest = kmalloc(sizeof(struct proc_acl),GFP_KERNEL);
+	if(dest == NULL) {
+		security_alert("Memory allocation failure for %s, Oblivion panicking",
+				"memory allocation failures",GR_VERSION);
+		return procdb.db[procdb.max_ref].tree;
+	}
+	dest->inode = data->inode;
+	dest->device = data->device;
+	dest->mode = data->mode;
+	dest->left = left; dest->right = right;
+	dest->height = height;
+	return dest;
+}
