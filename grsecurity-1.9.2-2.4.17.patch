+static __inline__ struct acl_subject * do_find_proc(struct acl_subject *curr)  
+{
+	int high,low;
+	struct acl_subject *pos;
+	low = 0;
+	high = procdb.max_ref;
+	while(low < high) {
+		pos = &procdb.db[((low+high)/2)];
+		if(acl_less(pos,curr))
+			low = ( ( (low + high) / 2) +1 );
+		else if(acl_eq(pos,curr))
+			return pos;
+		else
+			high = ( (high + low) / 2);
+	}
+	return NULL;
+}
