+	if( (p = memscan(line,'/',strlen(line))) == line + strlen(line) ) {
+		return 0;
+	}
+	else curr = &(filedb.db[filedb.max_ref]);
+
+	if( (q = memscan(p,' ',strlen(p))) == p + strlen(p))
+		return 0;
+	*q++ = '\0';
+	if(path_init(p,LOOKUP_FOLLOW|LOOKUP_POSITIVE,&filedata)) 
+		if(path_walk(p,&filedata)) {
