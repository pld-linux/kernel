+		security_alert("Error adding file acl for file %.1024s",
+				"acl add errors",p);
+		// goto out;
+		return 0;
+	}
+	curr->inode = filedata.dentry->d_inode->i_ino;
+	curr->device = filedata.dentry->d_inode->i_dev;
+	curr->mode = 0;
+
+	while(*q == ' ') q++;
+	while(working) {	
+		switch(*q) {
+			case 'r' :
+				curr->mode |= GR_FILE_READ;
+				q++;
+				break;
+			case 'h' :
+				curr->mode |= GR_FILE_HIDDEN;
+				q++;
+				break;
+			case 'a' :
+				curr->mode |= GR_FILE_APPEND;
+				q++;
+				break;
+			case 'w' :
+				curr->mode |= GR_FILE_WRITE;
+				q++;
+				break;
+			case 'x':
