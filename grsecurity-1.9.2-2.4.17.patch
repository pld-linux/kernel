+
+		}
+
+		else {
+			parent = tmp.mnt->mnt_parent;
+			dput(tmp.dentry);
+			tmp.dentry = dget(tmp.mnt->mnt_mountpoint);
+			mntput(tmp.mnt);
+			tmp.mnt = parent;
