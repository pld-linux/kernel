+	if((ip->proto == IPPROTO_TCP && !(ip->invflags & IPT_INV_PROTO)) ||
+		((ip->proto == IPPROTO_UDP) && !(ip->invflags & IPT_INV_PROTO)))
+			return 1;
+
+
+	printk("stealth: Only works on TCP and UDP\n");
+        return 0;
+}
