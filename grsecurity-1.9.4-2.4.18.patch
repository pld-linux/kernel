+	{
+#ifdef CONFIG_GR_DEBUG
+		security_alert("Program %s denied for file with inode %ld %d"
+				" by program label(wanted %x got %x)",
+				"",current->comm,match->inode,match->device,
+				curr->mode,match->mode);
+#endif
+		return GR_DENY;
+	}
