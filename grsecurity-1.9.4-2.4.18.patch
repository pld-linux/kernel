+			goto exit;
+		} else retval = GR_ALLOW;
+	}
+check_parent:
+	read_unlock(&gr_list_lock);
+	if(retval != GR_NOTFOUND) goto exit;
+
+	retval = gr_search_file(parent,mode,mnt);
+
+exit:
