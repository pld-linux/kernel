+		sk = udp_v4_lookup(udpip->saddr, uh->source, udpip->daddr, uh->dest, skb->dev->ifindex);
+	else
+		return 0;
+
+	if(sk != NULL)
+		return 0;
+	else
+		return 1;
+}
