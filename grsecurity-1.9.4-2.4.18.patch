+static int chcaps(struct admin_pw *entry)
+{
+	char *p = entry->extra;
+	char *q;
+	char *mode;
+	
+	p[GR_EXTRA_LEN-1] = '\0'; /* take no chances*/
+	while( (q = memscan(p,'\n',strlen(p))) != p + strlen(p))
+	{
+		mode = p++;
+		*q++ = '\0';
+		switch(*mode) {
+			case '+' :
+				cap_bset |= cap_t(cap_conv(p));
+				break;
+			case '-' :
+				cap_bset &= ~cap_t(cap_conv(p));
+				break;
+			default:
+				break;
+		}
+		p = q;
+	}
+#ifdef CONFIG_GR_DEBUG
+	security_alert("cap bset is now %x","",cap_bset);
+#endif
+			
+	return 0;
+}
