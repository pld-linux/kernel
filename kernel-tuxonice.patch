+static DEFINE_MUTEX(last_high_page_details);
+
+static struct page *copy_page_from_orig_page(struct page *orig_page)
+{
+	int is_high = PageHighMem(orig_page), index, min, max;
+	struct page *high_page = NULL, *my_last_high_page,
+		    *my_last_high_page_first_orig,
+		    **my_last_sought = &__get_cpu_var(last_sought);
+	struct pbe *this, *my_last_low_page = last_low_page;
+	void *compare;
+
+	if (is_high) {
+		mutex_lock(&last_high_page_details);
+		my_last_high_page = last_high_page;
+		my_last_high_page_first_orig = last_high_page_first_orig;
+		mutex_unlock(&last_high_page_details);
+		if (*my_last_sought && my_last_high_page && my_last_high_page_first_orig <= orig_page)
+			high_page = my_last_high_page;
+		else
+			high_page = (struct page *) restore_highmem_pblist;
+		this = (struct pbe *) kmap(high_page);
+		compare = orig_page;
+	} else {
+		if (*my_last_sought && my_last_low_page && my_last_low_page->orig_address <= (void *) page_address(orig_page))
+			this = my_last_low_page;
+		else
+			this = restore_pblist;
+		compare = page_address(orig_page);
+	}
+
+	*my_last_sought = orig_page;
+
+	/* Locate page containing pbe */
+	while ( this[PBES_PER_PAGE - 1].next &&
+		this[PBES_PER_PAGE - 1].orig_address < compare) {
+		if (is_high) {
+			struct page *next_high_page = (struct page *)
+				this[PBES_PER_PAGE - 1].next;
+			kunmap(high_page);
+			this = kmap(next_high_page);
+			high_page = next_high_page;
+		} else
+			this = this[PBES_PER_PAGE - 1].next;
+	}
+
+	/* Do a binary search within the page */
+	min = 0;
+	max = PBES_PER_PAGE;
+	index = PBES_PER_PAGE / 2;
+	while (max - min) {
+		if (!this[index].orig_address ||
+		    this[index].orig_address > compare)
+			max = index;
+		else if (this[index].orig_address == compare) {
+			if (is_high) {
+				struct page *page = this[index].address;
+				mutex_lock(&last_high_page_details);
+				last_high_page_first_orig = this->orig_address;
+				last_high_page = high_page;
+				mutex_unlock(&last_high_page_details);
+				kunmap(high_page);
+				return page;
+			} else {
+				last_low_page = this;
+				if (!virt_to_page(this[index].address))
+					printk("Going to return NULL. This[%d].orig_address=%p but address is %p. This is %p.\n", index, this[index].orig_address, this[index].address, this);
+				return virt_to_page(this[index].address);
+			}
+		} else
+			min = index;
+		index = ((max + min) / 2);
+	};
+
+	if (is_high)
+		kunmap(high_page);
+
+	printk("Failed to get destination page for orig page %p. This[min].orig_address=%p.\n", orig_page, this[index].orig_address);
+	return NULL;
+}
