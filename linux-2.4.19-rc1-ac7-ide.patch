+		 * this situation.  I choose: ide_error(...)
+		 */
+ 		return DRIVER(drive)->error(drive, "flagged_task_no_data_intr (unexpected phase)", stat); 
+	}
+
+	ide_end_drive_cmd (drive, stat, GET_ERR());
+
+	return ide_stopped;
+}
