+static int __inline__ obv_chk_inherit(struct dentry *dentry)
+{
+	struct obv_temp temp;
+	temp.mode = OBV_PROC_INHERIT;
+	if( (obv_chk_proc_acls(dentry,&temp)) == OBV_ALLOW) 
+		return 1;
+	return 0;
+}
