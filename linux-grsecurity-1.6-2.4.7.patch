+int obv_set_proc_acl(struct dentry *dentry,struct task_struct *tsk,char *filename) 
+{
+	struct obv_acl *temp = NULL;
+	struct dentry *curr = dentry;
+	if(obv_status & OBV_READY) {
+		do {
+			struct obv_acl tmp;
+			if(!curr->d_inode) break;
+			tmp.file_inode = curr->d_inode->i_ino;
+			tmp.file_dev = curr->d_inode->i_dev;
+			if(current->obvacl) {
+				if(obv_chk_inherit(curr)){
+					return 0;
+				}
+			}
+			temp = do_obv_find_proc(&tmp);
+			if(temp != NULL) {
+				goto out;
+			}
+			if(curr == curr->d_parent) 
+				break;
+		} while((curr = curr->d_parent) != NULL);
+	} else 
+		current->obvacl = NULL;
+
+	if(temp == NULL) current->obvacl = NULL;
+exit:   return 0;
+
+out:
+	tsk->obvacl = temp;
+	tsk->cap_permitted = tsk->cap_effective =  tsk->obvacl->file_caps;
+	goto exit;
+
+}
