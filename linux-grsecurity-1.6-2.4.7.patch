+static __inline__ struct obv_acl * do_obv_find_proc(struct obv_acl *curr)  
+{
+	int high,low;
+	struct obv_acl *pos;
+	low = 0;
+	high = procdb.max_ref;
+	while(low < high) {
+		pos = &procdb.db[((low+high)/2)];
+		if(obv_acl_less(pos,curr))
+			low = ( ( (low + high) / 2) +1 );
+		else if(obv_acl_eq(pos,curr))
+			return pos;
+		else
+			high = ( (high + low) / 2);
+	}
+	return NULL;
+}
