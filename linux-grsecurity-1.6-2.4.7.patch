+static int obv_add_pw(char *pw)
+{
+	struct SHA1_CTX context;
+	SHA1Init(&context);
+	SHA1Update(&context,pw,strlen(pw));
+	SHA1Final(obv_pwent.sum,&context);
+	return 0;
+}
