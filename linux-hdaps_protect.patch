+		ide_init_drive_cmd(&rq);
+		rq.flags = REQ_DRIVE_TASK;
+		rq.buffer = argbuf;
+		rc = ide_do_drive_cmd(drive, &rq, ide_head_wait);
+	}
+
+	return rc;
