+{
+	struct socket *sock;
+	int val, ret;
+	
+	val = sizeof(struct sockaddr);
+	sock = mlink->sock;
+	if (!sock->ops || !sock->ops->getname)
+		return -1;
+	ret = sock->ops->getname(sock, address, &val, 0);
+	if (ret)
+		return -1;
+	return val;
+}
