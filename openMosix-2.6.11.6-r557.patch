+int task_heldfiles_add(task_t *p, struct file *file,
+				struct vm_operations_struct *vm_ops)
+{
+	struct om_held_file *rfile;
+	
+	rfile = kmalloc(sizeof(struct om_held_file), GFP_KERNEL);
