+/**
+ * comm_shutdown - shutdown socket
+ * @mlink:	openMosix link to shutdown
+ **/
+static void comm_shutdown(om_link_t *mlink)
+{
+	struct socket *sock;
+
+	if (!mlink)
+		return;
+	sock = mlink->sock;
+
+	if (sock->ops)
+		sock->ops->shutdown(sock, SEND_SHUTDOWN);
